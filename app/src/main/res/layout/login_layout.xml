<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="150dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Login"

        android:background="@drawable/bg_red"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/LoginLayut">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank Executive Login"
        android:textSize="22dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"/>

    <LinearLayout xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"

            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:hint="@string/hint_mobile_val"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text=""
                        android:maxLength="10" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:hint="@string/hint_verfication_val"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtVerificatonCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text=""
                        android:maxLength="10" />

                </com.google.android.material.textfield.TextInputLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/ContinueBtn"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Continue"

        android:background="@drawable/bg_red"/>
    <Button
        android:id="@+id/SIgnInBtn"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Sign In"

        android:background="@drawable/bg_red"/>
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:visibility="gone"
        android:background="@drawable/bg_red"/>
</LinearLayout>
    <Button
        android:id="@+id/New_ExecButton"
        android:layout_width="150dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="New Executive"

        android:background="@drawable/bg_red"/>

</LinearLayout>